<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#F8F4D8"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:src="@drawable/vikhepatil"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="PRAVARA RURAL EDUCATION SOCITY'S"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#CD5C5C"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:text="SIR VISVESVARAYA INSTITUDE"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="	#CD5C5C"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:text="OF TECHNOLOGY, NASHIK"
                    />


            </LinearLayout>

            <ImageView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:src="@drawable/svit_logo"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="	#000000"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="12sp"
                android:text="A/P. - Chincholi - 422102, tal. Sinnar, Dist. Nashik (M. S.)"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="5sp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/telephone_img"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="(02551) 271278, 271179"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_marginLeft="15sp"
                    android:text="@string/faxNumber"
                    />




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="5sp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="@string/rediff_email"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_marginLeft="15sp"
                    android:text="@string/website"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="University ID No. 052"
                        android:textColor="#000000"
                        android:layout_marginStart="20sp"
                        android:layout_marginLeft="30sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Institute Code En 5125"
                        android:layout_marginLeft="50sp"
                        android:textColor="#000000"
                        />



                </LinearLayout>

            </LinearLayout>




        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_margin="10sp"
            android:background="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ref. SVIT/STUD/CERT/27"
                android:textColor="#000000"
                android:layout_marginStart="10sp"
                android:layout_marginLeft="20sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: "
                android:layout_marginLeft="30sp"
                android:textColor="#000000"
                />

            <DatePicker
                android:id="@+id/datePicker"
                android:layout_width="50dp"
                android:layout_height="64dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/getDatebutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:textSize="10sp"
                android:text="DD / MM / YYYY"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BONAFIDE CERTIFICATE"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="#CD5C5C"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:layout_marginTop="20dp"

            app:cardElevation="15sp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">


               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="horizontal"
                   android:layout_height="wrap_content">

                   <Spinner
                       android:id="@+id/MrMissSpinner"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       />

                   <EditText
                       android:id="@+id/studentNameEdit"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:hint="Student Full Name"
                       />

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="horizontal"
                   android:layout_marginTop="15sp"
                   android:gravity="center"
                   android:layout_height="wrap_content">

                   <Spinner
                       android:id="@+id/heSheSpinner"
                       android:layout_width="150sp"
                       android:layout_height="wrap_content"
                       />

                   <Spinner
                       android:id="@+id/FeSeTeYear"
                       android:layout_width="150sp"
                       android:layout_height="wrap_content"/>


               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:layout_marginTop="20sp"
                   android:orientation="horizontal">

                   <Spinner
                       android:id="@+id/deptSpinner"
                       android:layout_width="150sp"
                       android:layout_height="wrap_content" />



                   <Spinner
                       android:id="@+id/yearSpinner"
                       android:layout_width="150sp"
                       android:layout_height="wrap_content"/>

               </LinearLayout>


               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="vertical"
                   android:layout_height="wrap_content">

                   <EditText
                       android:id="@+id/purposeEditText"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:hint="Why you need bonafide ?"
                       />

                   <Button
                       android:id="@+id/submitbuttn"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Submit"
                       android:layout_margin="10sp"
                       android:padding="25sp"
                       android:background="@color/colorPrimary"
                       />

               </LinearLayout>


           </LinearLayout>


        </android.support.v7.widget.CardView>


        </LinearLayout>

</ScrollView>